@model IEnumerable<NetFramework.Models.PedidoVenta>

@{
    ViewBag.Title = "GetPedidosVentaPorFechas";
}

<h2>Buscar Por Fechas</h2>
<div>
    @using (Html.BeginForm("GetPedidosVentaPorFechas"))
    {
        <em>Fecha Inicio:</em>
        @Html.TextBox("fechaInicio","{0:yyyy-MM-dd}", new { type = "date"});
        <em>Fecha Fin:</em>
        @Html.TextBox("fechaFin","{0:yyyy-MM-dd}", new { type = "date" });
        <button>Buscar</button>
    }
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
