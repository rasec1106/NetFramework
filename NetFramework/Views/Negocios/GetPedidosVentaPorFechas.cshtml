            @Html.DisplayFor(modelItem => item.total)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>
<div>
    @for(int i=0; i< ViewBag.numPaginas; i++)
            {
                @Html.ActionLink((i + 1).ToString(), "GetPedidosVentaPorFechas",
               new {pagina= i, fechaInicio = ViewBag.fechaInicio, fechaFin = ViewBag.fechaFin},
               new {@class = ViewBag.pagina == i?"btn btn-primary":"btn btn-default"});
            }
</div>